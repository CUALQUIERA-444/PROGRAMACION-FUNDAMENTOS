package yo_fechas;
import java.time.*;
import java.time.chrono.*;
import java.time.temporal.ChronoUnit;
public class Fecha_prueba {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		LocalDateTime h = LocalDateTime.now().plusSeconds(1);
		long alarma = ChronoUnit.NANOS.between(LocalDateTime.now(),h); // cronometro
		while (LocalDateTime.now().isBefore(h))
			System.out.println("Alarma "+alarma);
			System.out.println("cualquiera");
		//FUNCIONA :)
	
		
	}
}
