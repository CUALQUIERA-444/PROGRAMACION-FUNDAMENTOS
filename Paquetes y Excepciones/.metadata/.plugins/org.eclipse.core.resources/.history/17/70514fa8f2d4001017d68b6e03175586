package PrácticaArrays;

import java.util.Scanner;
import java.math.*;
public class Array2 {
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		/* Leed 5 números en un array, sólo dejad introducir cada número si es positivo, si no
		lo es volved a pedirlo hasta que lo sea. Después recorred el array y mostrad sus
		cuadrados.
		*/
		Scanner sc = new Scanner (System.in);
		int numeros [] = new int[5];
		boolean validacion = true;
		for ( int i = 0; i < numeros.length; i++) {
		do {
		System.out.println("Introduce números POSITIVOS ara ir rellenando el array");
		numeros[i] = sc.nextInt();
		if (numeros[i] < 0)
		validacion = false;
		else 
		validacion = true;
		}
		while(validacion == false);
		
		for (int a = 0; a<numeros.length; a++) {
			int numero_cuad = numeros[a]*numeros[a];
			System.out.println("El cuadrado de "+numeros[a]+"es "+numero_cuad);
		}
	}
	}
}
