package yo_fechas;
import java.time.*;
import java.time.chrono.*;
import java.time.format.DateTimeFormatter;
import java.time.format.DateTimeParseException;
import java.time.temporal.ChronoUnit;
import java.util.Scanner;

public class Fecha_7 {
   //7 Lee la fecha de nacimiento de una persona y calcula su edad.
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		boolean validacion = false;
		long edad;
		DateTimeFormatter p = DateTimeFormatter.ofPattern("dd/MM/yyyy");
		String fecha_holder;
		LocalDate fecha_nac = null;
		Scanner sc = new Scanner(System.in);
		do {
			System.out.println("Introduce tu fecha de nacimiento (Año-mes-día)");
			fecha_holder = sc.nextLine();
			try {
				LocalDate.parse(fecha_holder);
				validacion = true;
			}
			catch (DateTimeParseException a) {
			System.out.println("Lo siento algo salio mál vuelva a introducir su fecha de nacimiento");
		}
		}
		while (validacion);
		edad = ChronoUnit.YEARS.between(fecha_nac, LocalDate.now());
				}
}
