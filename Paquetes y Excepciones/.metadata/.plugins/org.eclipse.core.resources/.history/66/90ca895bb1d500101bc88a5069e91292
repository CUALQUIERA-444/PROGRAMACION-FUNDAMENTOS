package PrácticaArrays;

import java.util.Arrays;
import java.util.Scanner;

public class Array4 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		/*
		 * Programa que lee 5 nombres de personas. Introducirlos en un array y ordenarlos
	alfabéticamente (usar método sort de la clase Arrays). Llevad otro array con el
	número de ventas de cada uno de ellos, inicialmente cero. Comprobar si otro
	nombre introducido después se encuentra entre esos 5.
		 */
		//Declarar array y rellenarlo 
		Scanner sc = new Scanner (System.in);
		String nombres[] = new String[5];
		String comerciante_us;
		boolean validacion = true;
		for (int i = 0; i<nombres.length; i++) {
		System.out.println("Introduce nombres de personas para rellenarlos en el array");
		nombres[i] = sc.nextLine();;
		}
		Arrays.sort(nombres, String.CASE_INSENSITIVE_ORDER ); //Ordenar Strings/Nombres MODIFICA DIRECTAMENTE EL STRING
		//String.CASE_INSENSITIVE_ORDER Pone el string a minusculas internas permitiendo diferenciar 
		//Leer el array rellenado mostrado y ordenado 
		for (int a = 0; a<nombres.length; a++) {
		System.out.println("Nombres ordenados "+nombres[a]);
		} //Corresponde al comercial
		
		
		//Declarar array de ventas y rellenarlo con valores inicialmente de 0.
		//NOTA el valor inicial de un nuevo array de enteros es de 0.
		int ventas[] = new int [5];
		for (int i = 0; i<ventas.length;i++ ) {
			System.out.println("Anota las ventas de "+nombres[i]);
			ventas[i] = sc.nextInt();
		}
		//Recorrer array de nombres y asignar la venta correspondiente
		do {
			System.out.println("Introduce el nombre de una persona comerciante");
			comerciante_us = sc.nextLine();
			for ( int b = 0;b<nombres.length;b++) { //Buscar 
			if (comerciante_us.equalsIgnoreCase(nombres[b]) == true) {
				System.out.println("El nombre es " +nombres[b]+ " y la cantidad de ventas es de "+ventas[b]);
				validacion = true; 
			}
			else 
				validacion = false;
			}
		}
			while(validacion == false);
}
}