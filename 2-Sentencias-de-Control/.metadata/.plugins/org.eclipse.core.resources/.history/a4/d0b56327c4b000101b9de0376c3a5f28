		// Cuando decimos el año 4 digitos se refiere a algo como (2025,2024)...
		// CONTAR LOS DIAS SE REFIERE A CONTAR DESDE EL 1 de enero hasta ese día
		int dia;
		int mes;
		int año;
		boolean seguir;
		Scanner sc = new Scanner (System.in);
		do {
			do {
				System.out.println("Introduce el mes de (1 a 12");
				mes = sc.nextInt();
				if ( mes >= 1 && mes <= 12)
				System.out.println(mes);
			}
			while ( mes >= 1 && mes <= 12);
		System.out.println("Introduce el día de (1 al 31)");
		dia = sc.nextInt();
		if ( dia >= 1 && dia <= 31)
			System.out.println(dia);
		}
		while ( dia >= 1 && dia <= 31);
	}
